// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Day {
  start String
  end   String
}

type Schedule {
  sun Day
  mon Day
  tue Day
  wed Day
  thu Day
  fri Day
  sat Day
}

model Restaurant {
  id        String     @id @default(uuid()) @map("_id")
  name      String     @unique
  address   String
  photo     String?
  schedule  Schedule
  createdAt DateTime   @default(now())
  Category  Category[]
}

model Category {
  id           String     @id @default(uuid()) @map("_id")
  name         String     @unique
  description  String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  restaurantId String
}
